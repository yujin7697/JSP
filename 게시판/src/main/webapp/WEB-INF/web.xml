<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>JAVAToSERVLETRE</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>/WEB-INF/view/main.jsp</welcome-file>
	</welcome-file-list>


	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>Controller.FrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- Filter -->
	<filter>
		<filter-name>UTF_8_Filter</filter-name>
		<filter-class>Filter.UTF_8_Filter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UTF_8_Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>UserLendMessageFilter</filter-name>
		<filter-class>Filter.UserLendMessageFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UserLendMessageFilter</filter-name>
		<url-pattern>/mypage.do</url-pattern>
	</filter-mapping>


	<!-- Listner -->

	<listener>
		<listener-class>Listener.InitServletContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>Listener.logSessionAttributeListener</listener-class>
	</listener>
	<listener>
		<listener-class>Listener.logSessionListener</listener-class>
	</listener>

</web-app>